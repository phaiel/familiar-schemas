{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PromptConfig",
  "description": "Schema for TypeScript prompt configuration Runtime prompts are in services/windmill/scripts/*.ts",
  "type": "object",
  "required": [
    "max_tokens",
    "model",
    "phase",
    "temperature"
  ],
  "properties": {
    "max_tokens": {
      "type": "integer",
      "format": "uint32",
      "minimum": 0.0
    },
    "model": {
      "type": "string"
    },
    "phase": {
      "$ref": "#/definitions/PromptPhase"
    },
    "temperature": {
      "type": "number",
      "format": "float"
    }
  },
  "definitions": {
    "PromptPhase": {
      "type": "string",
      "enum": [
        "Segmentation",
        "Purpose",
        "Classification"
      ]
    }
  }
}