{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MagicLink",
  "description": "A magic link for passwordless auth",
  "type": "object",
  "required": [
    "created_at",
    "email",
    "expires_at",
    "id",
    "purpose"
  ],
  "properties": {
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "email": {
      "type": "string"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time"
    },
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "metadata": {
      "default": null
    },
    "purpose": {
      "$ref": "#/definitions/MagicLinkPurpose"
    },
    "used_at": {
      "default": null,
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    }
  },
  "definitions": {
    "MagicLinkPurpose": {
      "description": "Purpose of a magic link",
      "type": "string",
      "enum": [
        "login",
        "signup",
        "verify_email",
        "password_reset"
      ]
    }
  }
}