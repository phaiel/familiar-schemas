{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PublicUser",
  "description": "Public user info (safe to expose to other users)",
  "type": "object",
  "required": [
    "id",
    "name"
  ],
  "properties": {
    "avatar_url": {
      "default": null,
      "type": [
        "string",
        "null"
      ]
    },
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string"
    }
  }
}