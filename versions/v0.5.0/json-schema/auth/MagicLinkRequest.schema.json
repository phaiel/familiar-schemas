{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MagicLinkRequest",
  "description": "Request for magic link",
  "type": "object",
  "required": [
    "email"
  ],
  "properties": {
    "email": {
      "type": "string"
    },
    "invite_code": {
      "description": "Optional invite code for signup flow",
      "default": null,
      "type": [
        "string",
        "null"
      ]
    }
  }
}