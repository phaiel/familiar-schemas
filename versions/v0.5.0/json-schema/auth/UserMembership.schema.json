{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserMembership",
  "description": "A user's membership in a family",
  "type": "object",
  "required": [
    "is_primary",
    "joined_at",
    "role",
    "tenant_id",
    "tenant_name"
  ],
  "properties": {
    "is_primary": {
      "type": "boolean"
    },
    "joined_at": {
      "type": "string",
      "format": "date-time"
    },
    "role": {
      "$ref": "#/definitions/InviteRole"
    },
    "tenant_id": {
      "type": "string",
      "format": "uuid"
    },
    "tenant_name": {
      "type": "string"
    }
  },
  "definitions": {
    "InviteRole": {
      "description": "Role to assign when invitation is accepted",
      "type": "string",
      "enum": [
        "admin",
        "member",
        "guest"
      ]
    }
  }
}