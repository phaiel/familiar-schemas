{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ImageBlock",
  "type": "object",
  "required": [
    "source"
  ],
  "properties": {
    "alt_text": {
      "type": [
        "string",
        "null"
      ]
    },
    "analyze": {
      "description": "Request vision analysis",
      "default": true,
