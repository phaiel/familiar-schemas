{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SegmentResponse",
  "description": "A raw segment from Phase 1 (no classification)",
  "type": "object",
  "required": [
    "content"
  ],
  "properties": {
    "content": {
      "type": "string"
    },
    "mentions": {
      "default": [],
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "subject": {
      "type": [
        "string",
        "null"
      ]
    },
    "temporal": {
      "type": [
        "string",
        "null"
      ]
    }
  }
}