{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DetectedPerson",
  "description": "A detected person in vision",
  "type": "object",
  "properties": {
    "bounding_box": {
      "default": null,
      "anyOf": [
        {
          "$ref": "#/definitions/BoundingBox"
        },
        {
          "type": "null"
        }
      ]
    },
    "emotion": {
      "default": null,
      "type": [
        "string",
        "null"
      ]
    },
    "face_id": {
      "default": null,
      "type": [
        "string",
        "null"
      ]
    }
  },
  "definitions": {
    "BoundingBox": {
      "description": "Bounding box for object detection",
      "type": "object",
      "required": [
        "height",
        "width",
        "x",
        "y"
      ],
      "properties": {
        "height": {
          "type": "number",
          "format": "double"
        },
        "width": {
          "type": "number",
          "format": "double"
        },
        "x": {
          "type": "number",
          "format": "double"
        },
        "y": {
          "type": "number",
          "format": "double"
        }
      }
    }
  }
}