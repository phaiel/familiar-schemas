{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AudioFeatures",
  "description": "Audio characteristics",
  "type": "object",
  "required": [
    "volume"
  ],
  "properties": {
    "pitch_variance": {
      "description": "Pitch variation",
      "default": null,
      "type": [
        "number",
        "null"
      ],
      "format": "double"
    },
    "speaking_rate": {
      "description": "Speaking rate (words per minute)",
      "default": null,
      "type": [
        "number",
        "null"
      ],
      "format": "double"
    },
    "voice_emotion": {
      "description": "Detected emotion from voice",
      "default": null,
      "type": [
        "string",
        "null"
      ]
    },
    "volume": {
      "description": "Average volume (0.0 to 1.0)",
      "type": "number",
      "format": "double"
    }
  }
}