{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PipelineTrigger",
  "description": "Trigger for pipeline selection",
  "type": "object",
  "required": [
    "trigger_type",
    "value"
  ],
  "properties": {
    "priority": {
      "description": "Priority (higher = checked first)",
      "default": 0,
      "type": "integer",
      "format": "uint32",
      "minimum": 0.0
    },
    "trigger_type": {
      "description": "Trigger type",
      "allOf": [
        {
          "$ref": "#/definitions/TriggerType"
        }
      ]
    },
    "value": {
      "description": "Value to match",
      "type": "string"
    }
  },
  "definitions": {
    "TriggerType": {
      "description": "Types of triggers",
      "oneOf": [
        {
          "description": "Match on purpose type",
          "type": "string",
          "enum": [
            "purpose"
          ]
        },
        {
          "description": "Match on modality",
          "type": "string",
          "enum": [
            "modality"
          ]
        },
        {
          "description": "Match on entity type",
          "type": "string",
          "enum": [
            "entity_type"
          ]
        },
        {
          "description": "Match on keyword",
          "type": "string",
          "enum": [
            "keyword"
          ]
        },
        {
          "description": "Custom condition",
          "type": "string",
          "enum": [
            "custom"
          ]
        }
      ]
    }
  }
}