{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BondCharacteristics",
  "description": "Bond characteristics",
  "type": "object",
  "required": [
    "intimacy",
    "reciprocity",
    "relationship_type",
    "strength",
    "trust",
    "valence"
  ],
  "properties": {
    "duration": {
      "description": "Duration of relationship",
      "default": null,
      "anyOf": [
        {
          "$ref": "#/definitions/RelationshipDuration"
        },
        {
          "type": "null"
        }
      ]
    },
    "interaction_frequency": {
      "description": "Frequency of interaction",
      "default": null,
      "anyOf": [
        {
          "$ref": "#/definitions/InteractionFrequency"
        },
        {
          "type": "null"
        }
      ]
    },
    "intimacy": {
      "description": "Intimacy level (0.0 distant to 1.0 close)",
      "type": "number",
      "format": "double"
    },
    "reciprocity": {
      "description": "Reciprocity (0.0 one-sided to 1.0 mutual)",
      "type": "number",
      "format": "double"
    },
    "relationship_type": {
      "description": "Type of relationship",
      "allOf": [
        {
          "$ref": "#/definitions/RelationshipType"
        }
      ]
    },
    "strength": {
      "description": "Strength of relationship (0.0 weak to 1.0 strong)",
      "type": "number",
      "format": "double"
    },
    "trust": {
      "description": "Trust level (0.0 to 1.0)",
      "type": "number",
      "format": "double"
    },
    "valence": {
      "description": "Valence (-1.0 negative to 1.0 positive)",
      "type": "number",
      "format": "double"
    }
  },
  "definitions": {
    "DurationCategory": {
      "description": "Duration categories",
      "type": "string",
      "enum": [
        "new",
        "recent",
        "established",
        "long_term",
        "lifelong"
      ]
    },
    "InteractionFrequency": {
      "description": "Interaction frequency",
      "type": "string",
      "enum": [
        "daily",
        "weekly",
        "monthly",
        "quarterly",
        "yearly",
        "rarely"
      ]
    },
    "RelationshipDuration": {
      "description": "Relationship duration",
      "type": "object",
      "required": [
        "category"
      ],
      "properties": {
        "category": {
          "description": "Duration category",
          "allOf": [
            {
              "$ref": "#/definitions/DurationCategory"
            }
          ]
        },
        "since": {
          "description": "Start date if known",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "years": {
          "description": "How long the relationship has existed",
          "default": null,
          "type": [
            "number",
            "null"
          ],
          "format": "double"
        }
      }
    },
    "RelationshipType": {
      "description": "Types of relationships",
      "type": "string",
      "enum": [
        "family",
        "friend",
        "close_friend",
        "best_friend",
        "romantic",
        "ex_romantic",
        "spouse",
        "parent",
        "child",
        "sibling",
        "colleague",
        "manager",
        "direct_report",
        "mentor",
        "mentee",
        "client",
        "vendor",
        "partner",
        "acquaintance",
        "neighbor",
        "classmate",
        "teammate",
        "adversary",
        "rival",
        "service_provider",
        "other"
      ]
    }
  }
}