{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SubjectReference",
  "description": "Reference to a subject",
  "type": "object",
  "required": [
    "confidence",
    "name",
    "subject_type"
  ],
  "properties": {
    "confidence": {
      "description": "Confidence in identification",
      "type": "number",
      "format": "double"
    },
    "name": {
      "description": "Name/label of subject",
      "type": "string"
    },
    "subject_type": {
      "description": "Type of subject",
      "allOf": [
        {
          "$ref": "#/definitions/SubjectType"
        }
      ]
    },
    "thread_id": {
      "description": "Matched thread ID (if resolved)",
      "default": null,
      "type": [
        "string",
        "null"
      ]
    }
  },
  "definitions": {
    "SubjectType": {
      "description": "Types of subjects",
      "oneOf": [
        {
          "description": "The user themselves",
          "type": "string",
          "enum": [
            "self_"
          ]
        },
        {
          "description": "Another person",
          "type": "string",
          "enum": [
            "person"
          ]
        },
        {
          "description": "A place",
          "type": "string",
          "enum": [
            "place"
          ]
        },
        {
          "description": "An organization",
          "type": "string",
          "enum": [
            "organization"
          ]
        },
        {
          "description": "A concept/topic",
          "type": "string",
          "enum": [
            "concept"
          ]
        },
        {
          "description": "An event",
          "type": "string",
          "enum": [
            "event"
          ]
        },
        {
          "description": "An object/thing",
          "type": "string",
          "enum": [
            "object"
          ]
        },
        {
          "description": "Unknown/other",
          "type": "string",
          "enum": [
            "other"
          ]
        }
      ]
    }
  }
}