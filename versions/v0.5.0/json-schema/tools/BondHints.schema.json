{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BondHints",
  "description": "Hints for relationship bonds",
  "type": "object",
  "required": [
    "relationship_type",
    "source",
    "strength",
    "target",
    "valence"
  ],
  "properties": {
    "description": {
      "description": "Description of relationship",
      "default": null,
      "type": [
        "string",
        "null"
      ]
    },
    "reciprocity": {
      "description": "Reciprocity (0.0 one-way to 1.0 mutual)",
      "default": 0.5,
      "type": "number",
      "format": "double"
    },
    "relationship_type": {
      "description": "Relationship type",
      "allOf": [
        {
          "$ref": "#/definitions/RelationshipType"
        }
      ]
    },
    "source": {
      "description": "Source entity (head of relationship)",
      "allOf": [
        {
          "$ref": "#/definitions/ThreadReference"
        }
      ]
    },
    "strength": {
      "description": "Strength of relationship (0.0 to 1.0)",
      "type": "number",
      "format": "double"
    },
    "target": {
      "description": "Target entity (tail of relationship)",
      "allOf": [
        {
          "$ref": "#/definitions/ThreadReference"
        }
      ]
    },
    "valence": {
      "description": "Valence of relationship (-1.0 to 1.0)",
      "type": "number",
      "format": "double"
    }
  },
  "definitions": {
    "RelationshipType": {
      "description": "Types of relationships",
      "type": "string",
      "enum": [
        "family",
        "friend",
        "close_friend",
        "best_friend",
        "romantic",
        "ex_romantic",
        "spouse",
        "parent",
        "child",
        "sibling",
        "colleague",
        "manager",
        "direct_report",
        "mentor",
        "mentee",
        "client",
        "vendor",
        "partner",
        "acquaintance",
        "neighbor",
        "classmate",
        "teammate",
        "adversary",
        "rival",
        "service_provider",
        "other"
      ]
    },
    "ThreadReference": {
      "description": "Reference to an existing thread",
      "type": "object",
      "required": [
        "id",
        "name",
        "thread_type"
      ],
      "properties": {
        "aliases": {
          "description": "Aliases for matching",
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "id": {
          "description": "Thread ID",
          "type": "string"
        },
        "name": {
          "description": "Thread name/label",
          "type": "string"
        },
        "thread_type": {
          "description": "Thread type (person, place, concept, etc.)",
          "type": "string"
        }
      }
    }
  }
}