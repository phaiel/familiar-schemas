{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EntityMention",
  "description": "An entity mention within a segment",
  "type": "object",
  "required": [
    "confidence",
    "end",
    "entity_type",
    "start",
    "text"
  ],
  "properties": {
    "confidence": {
      "description": "Confidence in detection",
      "type": "number",
      "format": "double"
    },
    "end": {
      "type": "integer",
      "format": "uint",
      "minimum": 0.0
    },
    "entity_type": {
      "description": "Type of entity mentioned",
      "allOf": [
        {
          "$ref": "#/definitions/EntityMentionType"
        }
      ]
    },
    "resolved_id": {
      "description": "Resolved entity ID (if matched to known entity)",
      "default": null,
      "type": [
        "string",
        "null"
      ]
    },
    "start": {
      "description": "Position in segment",
      "type": "integer",
      "format": "uint",
      "minimum": 0.0
    },
    "text": {
      "description": "The text of the mention",
      "type": "string"
    }
  },
  "definitions": {
    "EntityMentionType": {
      "description": "Types of entity mentions",
      "type": "string",
      "enum": [
        "PERSON",
        "PLACE",
        "ORGANIZATION",
        "DATE_TIME",
        "EVENT",
        "CONCEPT",
        "OBJECT",
        "ACTIVITY"
      ]
    }
  }
}