{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BondUpdate",
  "description": "Update to an existing bond",
  "type": "object",
  "required": [
    "bond_id",
    "changes",
    "reason"
  ],
  "properties": {
    "bond_id": {
      "description": "ID of bond to update",
      "type": "string"
    },
    "changes": {
      "description": "Changes to apply",
      "allOf": [
        {
          "$ref": "#/definitions/BondChanges"
        }
      ]
    },
    "reason": {
      "description": "Reason for update",
      "type": "string"
    }
  },
  "definitions": {
    "BondChanges": {
      "description": "Changes to bond characteristics",
      "type": "object",
      "properties": {
        "new_relationship_type": {
          "default": null,
          "anyOf": [
            {
              "$ref": "#/definitions/RelationshipType"
            },
            {
              "type": "null"
            }
          ]
        },
        "strength_delta": {
          "default": null,
          "type": [
            "number",
            "null"
          ],
          "format": "double"
        },
        "trust_delta": {
          "default": null,
          "type": [
            "number",
            "null"
          ],
          "format": "double"
        },
        "valence_delta": {
          "default": null,
          "type": [
            "number",
            "null"
          ],
          "format": "double"
        }
      }
    },
    "RelationshipType": {
      "description": "Types of relationships",
      "type": "string",
      "enum": [
        "family",
        "friend",
        "close_friend",
        "best_friend",
        "romantic",
        "ex_romantic",
        "spouse",
        "parent",
        "child",
        "sibling",
        "colleague",
        "manager",
        "direct_report",
        "mentor",
        "mentee",
        "client",
        "vendor",
        "partner",
        "acquaintance",
        "neighbor",
        "classmate",
        "teammate",
        "adversary",
        "rival",
        "service_provider",
        "other"
      ]
    }
  }
}