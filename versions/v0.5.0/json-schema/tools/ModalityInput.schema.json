{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ModalityInput",
  "description": "Input container for different modalities",
  "oneOf": [
    {
      "type": "object",
      "required": [
        "content",
        "modality"
      ],
      "properties": {
        "content": {
          "type": "string"
        },
        "language": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "modality": {
          "type": "string",
          "enum": [
            "text"
          ]
        }
      }
    },
    {
      "type": "object",
      "required": [
        "data",
        "format",
        "modality"
      ],
      "properties": {
        "data": {
          "description": "Base64 encoded audio data",
          "type": "string"
        },
        "duration_seconds": {
          "description": "Duration in seconds",
          "default": null,
          "type": [
            "number",
            "null"
          ],
          "format": "double"
        },
        "format": {
          "description": "Audio format (mp3, wav, etc.)",
          "type": "string"
        },
        "modality": {
          "type": "string",
          "enum": [
            "audio"
          ]
        }
      }
    },
    {
      "type": "object",
      "required": [
        "data",
        "format",
        "modality"
      ],
      "properties": {
        "data": {
          "description": "Base64 encoded image data",
          "type": "string"
        },
        "format": {
          "description": "Image format (png, jpg, etc.)",
          "type": "string"
        },
        "height": {
          "default": null,
          "type": [
            "integer",
            "null"
          ],
          "format": "uint32",
          "minimum": 0.0
        },
        "modality": {
          "type": "string",
          "enum": [
            "vision"
          ]
        },
        "width": {
          "description": "Image dimensions",
          "default": null,
          "type": [
            "integer",
            "null"
          ],
          "format": "uint32",
          "minimum": 0.0
        }
      }
    },
    {
      "type": "object",
      "required": [
        "data",
        "format",
        "modality"
      ],
      "properties": {
        "data": {
          "description": "Base64 encoded video data or URL",
          "type": "string"
        },
        "duration_seconds": {
          "description": "Duration in seconds",
          "default": null,
          "type": [
            "number",
            "null"
          ],
          "format": "double"
        },
        "format": {
          "description": "Video format (mp4, webm, etc.)",
          "type": "string"
        },
        "fps": {
          "description": "Frame rate",
          "default": null,
          "type": [
            "number",
            "null"
          ],
          "format": "double"
        },
        "modality": {
          "type": "string",
          "enum": [
            "video"
          ]
        }
      }
    }
  ]
}