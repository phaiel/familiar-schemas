{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InputBlock",
  "description": "An input field",
  "type": "object",
  "required": [
    "element",
    "label"
  ],
  "properties": {
    "element": {
      "$ref": "#/definitions/BlockElement"
    },
    "hint": {
      "anyOf": [
        {
          "$ref": "#/definitions/PlainTextObject"
        },
        {
          "type": "null"
        }
      ]
    },
    "label": {
      "$ref": "#/definitions/PlainTextObject"
    },
    "optional": {
      "default": false,
      "type": "boolean"
    }
  },
  "definitions": {
    "BlockElement": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "action_id",
            "text",
            "type"
          ],
          "properties": {
            "action_id": {
              "type": "string"
            },
            "style": {
              "anyOf": [
                {
                  "$ref": "#/definitions/ButtonStyle"
                },
                {
                  "type": "null"
                }
              ]
            },
            "text": {
              "$ref": "#/definitions/PlainTextObject"
            },
            "type": {
              "type": "string",
              "enum": [
                "button"
              ]
            },
            "url": {
              "type": [
                "string",
                "null"
              ]
            },
            "value": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "alt_text",
            "image_url",
            "type"
          ],
          "properties": {
            "alt_text": {
              "type": "string"
            },
            "image_url": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "image"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "action_id",
            "options",
            "type"
          ],
          "properties": {
            "action_id": {
              "type": "string"
            },
            "options": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/OptionObject"
              }
            },
            "type": {
              "type": "string",
              "enum": [
                "overflow"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "action_id",
            "type"
          ],
          "properties": {
            "action_id": {
              "type": "string"
            },
            "initial_value": {
              "type": [
                "string",
                "null"
              ]
            },
            "multiline": {
              "default": false,
              "type": "boolean"
            },
            "placeholder": {
              "anyOf": [
                {
                  "$ref": "#/definitions/PlainTextObject"
                },
                {
                  "type": "null"
                }
              ]
            },
            "type": {
              "type": "string",
              "enum": [
                "plain_text_input"
              ]
            }
          }
        }
      ]
    },
    "ButtonStyle": {
      "type": "string",
      "enum": [
        "primary",
        "danger"
      ]
    },
    "OptionObject": {
      "type": "object",
      "required": [
        "text",
        "value"
      ],
      "properties": {
        "description": {
          "anyOf": [
            {
              "$ref": "#/definitions/PlainTextObject"
            },
            {
              "type": "null"
            }
          ]
        },
        "text": {
          "$ref": "#/definitions/PlainTextObject"
        },
        "url": {
          "type": [
            "string",
            "null"
          ]
        },
        "value": {
          "type": "string"
        }
      }
    },
    "PlainTextObject": {
      "type": "object",
      "required": [
        "text"
      ],
      "properties": {
        "emoji": {
          "default": false,
          "type": "boolean"
        },
        "text": {
          "type": "string"
        }
      }
    }
  }
}