{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClassifierInput",
  "description": "Input to the classifier agent",
  "type": "object",
  "required": [
    "request_id",
    "state",
    "text"
  ],
  "properties": {
    "request_id": {
      "description": "Request ID for tracing",
      "type": "string"
    },
    "state": {
      "description": "Current agent state"
    },
    "text": {
      "description": "Text to classify",
      "type": "string"
    }
  }
}