{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AgentResponse",
  "description": "Response from an agent",
  "type": "object",
  "required": [
    "content"
  ],
  "properties": {
    "content": {
      "description": "Content of the response",
      "type": "string"
    },
    "message_type": {
      "description": "Type of message (text, question, etc.)",
      "default": "text",
      "type": "string"
    },
    "options": {
      "description": "Options for questions",
      "default": null,
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    }
  }
}