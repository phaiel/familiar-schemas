{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ListEntitiesOptions",
  "description": "Options for listing entities",
  "type": "object",
  "properties": {
    "entity_type": {
      "default": null,
      "anyOf": [
        {
          "$ref": "#/definitions/FamiliarEntityType"
        },
        {
          "type": "null"
        }
      ]
    },
    "limit": {
      "default": null,
      "type": [
        "integer",
        "null"
      ],
      "format": "int64"
    },
    "status": {
      "default": null,
      "anyOf": [
        {
          "$ref": "#/definitions/EntityStatus"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "definitions": {
    "EntityStatus": {
      "description": "HILT (Human in the Loop) status for entity approval",
      "type": "string",
      "enum": [
        "pending",
        "approved",
        "rejected",
        "auto_spawned"
      ]
    },
    "FamiliarEntityType": {
      "description": "Type of familiar entity",
      "type": "string",
      "enum": [
        "MOMENT",
        "PULSE",
        "INTENT",
        "THREAD",
        "BOND",
        "MOTIF",
        "FILAMENT",
        "FOCUS"
      ]
    }
  }
}