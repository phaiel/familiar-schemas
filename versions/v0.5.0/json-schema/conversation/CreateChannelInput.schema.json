{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CreateChannelInput",
  "description": "Input for creating a new channel",
  "type": "object",
  "required": [
    "name",
    "tenant_id"
  ],
  "properties": {
    "channel_type": {
      "default": null,
      "anyOf": [
        {
          "$ref": "#/definitions/ChannelType"
        },
        {
          "type": "null"
        }
      ]
    },
    "description": {
      "default": null,
      "type": [
        "string",
        "null"
      ]
    },
    "name": {
      "type": "string"
    },
    "owner_id": {
      "default": null,
      "type": [
        "string",
        "null"
      ],
      "format": "uuid"
    },
    "tenant_id": {
      "type": "string",
      "format": "uuid"
    }
  },
  "definitions": {
    "ChannelType": {
      "description": "Type of channel",
      "oneOf": [
        {
          "description": "Personal channel for a single user",
          "type": "string",
          "enum": [
            "personal"
          ]
        },
        {
          "description": "Family channel shared by all tenant members",
          "type": "string",
          "enum": [
            "family"
          ]
        },
        {
          "description": "Shared channel for specific members",
          "type": "string",
          "enum": [
            "shared"
          ]
        }
      ]
    }
  }
}