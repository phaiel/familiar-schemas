{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ObservationRequest",
  "description": "A complete Heddle observation request",
  "type": "object",
  "required": [
    "config",
    "context",
    "segment"
  ],
  "properties": {
    "config": {
      "$ref": "#/definitions/RequestConfig"
    },
    "context": {
      "type": "string"
    },
    "segment": {
      "type": "string"
    }
  },
  "definitions": {
    "AIProvider": {
      "description": "AI Provider enumeration",
      "type": "string",
      "enum": [
        "openai",
        "anthropic",
        "google",
        "mock"
      ]
    },
    "MaxTokens": {
      "description": "Maximum number of tokens for input/output",
      "type": "integer",
      "format": "uint32",
      "minimum": 0.0
    },
    "ModelConfig": {
      "description": "Model definition with all configuration",
      "type": "object",
      "required": [
        "api_model_id",
        "context_window",
        "id",
        "name",
        "provider",
        "supports_json_mode"
      ],
      "properties": {
        "api_model_id": {
          "description": "The actual API model ID to send to the provider",
          "type": "string"
        },
        "context_window": {
          "description": "Context window size (tokens)",
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        },
        "deprecated": {
          "description": "Whether this model is deprecated",
          "default": false,
          "type": "boolean"
        },
        "id": {
          "description": "Unique identifier (e.g., \"gpt-4o\", \"claude-sonnet-4\")",
          "type": "string"
        },
        "name": {
          "description": "Human-readable name",
          "type": "string"
        },
        "notes": {
          "description": "Notes about the model",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "provider": {
          "description": "The provider",
          "allOf": [
            {
              "$ref": "#/definitions/AIProvider"
            }
          ]
        },
        "supports_json_mode": {
          "description": "Whether the model supports JSON mode",
          "type": "boolean"
        }
      }
    },
    "RequestConfig": {
      "description": "Configuration for an AI completion request",
      "type": "object",
      "required": [
        "json_mode",
        "max_tokens",
        "model",
        "retry",
        "temperature",
        "timeout_ms"
      ],
      "properties": {
        "json_mode": {
          "type": "boolean"
        },
        "max_tokens": {
          "$ref": "#/definitions/MaxTokens"
        },
        "model": {
          "$ref": "#/definitions/ModelConfig"
        },
        "retry": {
          "$ref": "#/definitions/RetryConfig"
        },
        "temperature": {
          "$ref": "#/definitions/Temperature"
        },
        "timeout_ms": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        }
      }
    },
    "RetryConfig": {
      "description": "Configuration for retry behavior on transient failures",
      "type": "object",
      "required": [
        "backoff_factor",
        "initial_delay_ms",
        "max_delay_ms",
        "max_retries"
      ],
      "properties": {
        "backoff_factor": {
          "type": "number",
          "format": "double"
        },
        "initial_delay_ms": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "max_delay_ms": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "max_retries": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        }
      }
    },
    "Temperature": {
      "description": "Temperature controls randomness in LLM outputs. Range: 0.0 (deterministic) to 2.0 (very random)",
      "type": "number",
      "format": "float"
    }
  }
}