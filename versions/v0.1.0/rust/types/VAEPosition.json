{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "category": "agentic",
  "description": "Position in 3D VAE space (quantized coordinates)",
  "properties": {
    "arousal": {
      "description": "Energy/activation (-10M to +10M)",
      "format": "int64",
      "type": "integer"
    },
    "epistemic": {
      "description": "Knowledge certainty (-10M to +10M)",
      "format": "int64",
      "type": "integer"
    },
    "valence": {
      "description": "Emotional polarity (-10M to +10M)",
      "format": "int64",
      "type": "integer"
    }
  },
  "required": [
    "arousal",
    "epistemic",
    "valence"
  ],
  "title": "VAEPosition",
  "type": "object"
}