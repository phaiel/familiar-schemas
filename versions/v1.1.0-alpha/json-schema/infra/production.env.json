{
  "$schema": "meta/Environment.meta.schema.json",
  "name": "production",
  
  "nodes": {
    "familiar-daemon": {
      "min_replicas": 3,
      "max_replicas": 20,
      "scaling": {
        "metric": "queue_depth",
        "target": 50,
        "cooldown": "5m"
      }
    },
    "familiar-worker": {
      "min_replicas": 2,
      "max_replicas": 10,
      "scaling": {
        "metric": "cpu",
        "target": 80,
        "cooldown": "3m"
      }
    },
    "classifier": {
      "min_replicas": 1,
      "max_replicas": 5,
      "scaling": {
        "metric": "active_jobs",
        "target": 8,
        "cooldown": "2m"
      }
    }
  },
  
  "global": {
    "version_compatibility": "exact",
    "default_timeout": "30s"
  }
}
