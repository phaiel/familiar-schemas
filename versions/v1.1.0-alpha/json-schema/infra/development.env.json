{
  "$schema": "meta/Environment.meta.schema.json",
  "name": "development",
  
  "nodes": {
    "familiar-daemon": {
      "min_replicas": 1,
      "max_replicas": 2,
      "scaling": {
        "metric": "queue_depth",
        "target": 10,
        "cooldown": "1m"
      }
    },
    "familiar-worker": {
      "min_replicas": 1,
      "max_replicas": 2,
      "scaling": {
        "metric": "cpu",
        "target": 50,
        "cooldown": "30s"
      }
    },
    "classifier": {
      "min_replicas": 1,
      "max_replicas": 1
    }
  },
  
  "global": {
    "version_compatibility": "latest_compatible",
    "default_timeout": "120s"
  }
}
