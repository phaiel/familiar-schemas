{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ChannelType": {
      "enum": [
        "Personal",
        "Family",
        "Shared"
      ],
      "type": "string"
    }
  },
  "properties": {
    "channel_type": {
      "$ref": "../domains/conversation/ChannelType.schema.json"
    },
    "created_at": {
      "format": "date-time",
      "type": "string"
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "id": {
      "$ref": "../primitives/ChannelId.schema.json"
    },
    "name": {
      "type": "string"
    },
    "owner_id": {
      "anyOf": [
        {
          "$ref": "../primitives/UserId.schema.json"
        },
        {
          "type": "null"
        }
      ]
    },
    "settings": {
      "x-familiar-column-type": "JsonBinary"
    },
    "tenant_id": {
      "$ref": "../primitives/TenantId.schema.json"
    },
    "updated_at": {
      "format": "date-time",
      "type": "string"
    },
    "version": {
      "description": "Optimistic locking version - incremented on each update",
      "format": "int32",
      "type": "integer",
      "x-familiar-default-value": 0
    }
  },
  "required": [
    "channel_type",
    "created_at",
    "id",
    "name",
    "settings",
    "tenant_id",
    "updated_at",
    "version"
  ],
  "title": "Model",
  "type": "object",
  "x-familiar-kind": "database",
  "x-familiar-meta-schema": {
    "$ref": "../architecture/meta/Database.meta.schema.json"
  },
  "x-familiar-module": "conversation",
  "x-familiar-primary-key": "id",
  "x-familiar-relations": [
    {
      "from": "tenant_id",
      "target": "TenantModel",
      "to": "id",
      "type": "belongs_to"
    },
    {
      "field": "messages",
      "target": "MessageModel",
      "type": "has_many"
    }
  ],
  "x-familiar-service": {
    "$ref": "../infrastructure/nodes/familiar-daemon.node.json"
  },
  "x-familiar-table": "channels"
}