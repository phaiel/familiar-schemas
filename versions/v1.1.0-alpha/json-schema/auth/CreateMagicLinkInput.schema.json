{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "MagicLinkPurpose": {
      "description": "Purpose of a magic link",
      "enum": [
        "login",
        "signup",
        "verify_email",
        "password_reset"
      ],
      "type": "string"
    }
  },
  "description": "Input for creating a magic link",
  "properties": {
    "email": {
      "$ref": "../primitives/Email.schema.json"
    },
    "expires_in_minutes": {
      "default": 15,
      "description": "Link duration in minutes (default 15)",
      "format": "int64",
      "type": "integer"
    },
    "metadata": {
      "anyOf": [
        {
          "default": null
        },
        {
          "type": "null"
        }
      ]
    },
    "purpose": {
      "$ref": "MagicLinkPurpose.schema.json"
    }
  },
  "required": [
    "email",
    "purpose"
  ],
  "title": "CreateMagicLinkInput",
  "type": "object",
  "x-familiar-kind": "auth",
  "x-familiar-requires-auth": true,
  "x-familiar-service": {
    "$ref": "../nodes/familiar-daemon.node.json"
  }
}
