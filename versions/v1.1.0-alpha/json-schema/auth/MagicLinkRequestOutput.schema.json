{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MagicLinkRequestOutput",
  "description": "Output from magic link request action",
  "type": "object",
  "properties": {
    "success": {
      "type": "boolean"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "expires_at": {
      "$ref": "../primitives/Timestamp.schema.json"
    },
    "dev_token": {
      "type": ["string", "null"],
      "description": "In dev mode, return the token for testing"
    }
  },
  "required": ["success", "email", "expires_at"],
  "x-familiar-kind": "response"
}

