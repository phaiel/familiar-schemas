{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://familiar.dev/schemas/architecture/Callarchitecture/steps/Step.meta.schema.json",
  "title": "Call Step Definition",
  "description": "Execute a Rust Action with retry and timeout semantics",
  "type": "object",
  "required": ["id", "kind", "action"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z_][a-z0-9_]*$",
      "description": "Unique identifier for this step variable (snake_case)."
    },
    "kind": {
      "const": "call",
      "description": "Discriminator for call step"
    },
    "description": { "type": "string" },
    "action": {
      "$ref": "architecture/references/SchemaRef.meta.schema.json",
      "description": "Action to execute"
    },
    "args": {
      "type": "object",
      "description": "Argument mapping using CEL expressions",
      "additionalProperties": { "type": "string" }
    },
    "retry": {
      "type": "object",
      "properties": {
        "max_attempts": {
          "type": "integer",
          "default": 3,
          "minimum": 1
        }
      }
    },
    "timeout": {
      "type": "string",
      "description": "ISO 8601 duration (e.g., 'PT30S')"
    },
    "x-familiar-visual": {
      "type": "object",
      "description": "Visual layout coordinates for flow diagrams",
      "properties": {
        "x": {"type": "number"},
        "y": {"type": "number"}
      }
    }
  }
}
