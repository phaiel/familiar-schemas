{
  "$id": "https://familiar.dev/schemas/architecture/Maparchitecture/steps/Step.meta.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Bounded iteration with concurrency control over arrays",
  "properties": {
    "concurrency": {
      "default": 5,
      "description": "Maximum concurrent iterations",
      "minimum": 1,
      "type": "integer"
    },
    "description": {
      "type": "string"
    },
    "id": {
      "description": "Unique identifier for this step variable (snake_case).",
      "pattern": "^[a-z_][a-z0-9_]*$",
      "type": "string"
    },
    "items": {
      "description": "CEL expression evaluating to array to iterate over",
      "type": "string"
    },
    "iterator": {
      "default": "item",
      "description": "Variable name for current item in iteration",
      "type": "string"
    },
    "kind": {
      "const": "map",
      "description": "Discriminator for map step"
    },
    "steps": {
      "description": "Steps to execute for each item",
      "items": {
        "$ref": "Step.meta.schema.json"
      },
      "type": "array"
    },
    "x-familiar-visual": {
      "description": "Visual layout coordinates for flow diagrams",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "id",
    "kind",
    "items",
    "steps"
  ],
  "title": "Map Step Definition",
  "type": "object"
}