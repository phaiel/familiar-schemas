{
  "$id": "https://familiar.dev/schemas/architecture/Switcharchitecture/steps/Step.meta.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Exclusive branching with CEL condition evaluation",
  "properties": {
    "branches": {
      "description": "Ordered list of branches to evaluate",
      "items": {
        "properties": {
          "condition": {
            "description": "CEL expression for branching logic",
            "type": "string"
          },
          "steps": {
            "description": "Steps to execute if condition matches",
            "items": {
              "$ref": "Step.meta.schema.json"
            },
            "type": "array"
          }
        },
        "required": [
          "condition",
          "steps"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "default": {
      "description": "Steps to execute if no branches match",
      "items": {
        "$ref": "Step.meta.schema.json"
      },
      "type": "array"
    },
    "description": {
      "type": "string"
    },
    "id": {
      "description": "Unique identifier for this step variable (snake_case).",
      "pattern": "^[a-z_][a-z0-9_]*$",
      "type": "string"
    },
    "kind": {
      "const": "switch",
      "description": "Discriminator for switch step"
    },
    "x-familiar-visual": {
      "description": "Visual layout coordinates for flow diagrams",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "id",
    "kind",
    "branches"
  ],
  "title": "Switch Step Definition",
  "type": "object"
}