{
  "$id": "https://familiar.dev/schemas/architecture/architecture/steps/Step.meta.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Base schema for all technique steps in the ISA",
  "oneOf": [
    {
      "$ref": "Step.meta.schema.json"
    },
    {
      "$ref": "Step.meta.schema.json"
    },
    {
      "$ref": "Step.meta.schema.json"
    },
    {
      "$ref": "Step.meta.schema.json"
    },
    {
      "$ref": "Step.meta.schema.json"
    }
  ],
  "properties": {
    "description": {
      "type": "string"
    },
    "id": {
      "description": "Unique identifier for this step variable (snake_case).",
      "pattern": "^[a-z_][a-z0-9_]*$",
      "type": "string"
    },
    "kind": {
      "description": "Step type discriminator",
      "enum": [
        "call",
        "switch",
        "map",
        "parallel",
        "transform"
      ],
      "type": "string"
    },
    "x-familiar-visual": {
      "description": "Visual layout coordinates for flow diagrams",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "type": "object"
    }
  },
  "required": [
    "id",
    "kind"
  ],
  "title": "Step Definition",
  "type": "object"
}