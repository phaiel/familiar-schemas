{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://familiar.dev/schemas/architecture/Router.meta.schema.json",
  "title": "Router Schema Definition",
  "description": "Schemas that define the routing engine's inputs, outputs, and behavior.",
  "type": "object",
  "required": ["title", "x-familiar-kind"],
  "properties": {
    "title": { "type": "string" },
    "description": { "type": "string" },

    "x-familiar-kind": {
      "enum": ["router_context", "router_decision", "router_trace"],
      "description": "Discriminator for router-related schemas"
    },

    "x-familiar-service": {
      "description": "Service that manages this router component",
      "type": "object",
      "properties": {
        "$ref": { "type": "string" }
      },
      "required": ["$ref"]
    },

    "x-familiar-meta-schema": {
      "$ref": "#",
      "description": "Self-reference for meta-schema validation"
    }
  }
}
