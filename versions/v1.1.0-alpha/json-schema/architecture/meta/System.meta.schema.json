{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://familiar.dev/schemas/architecture/System.meta.schema.json",
  "title": "ECS System Meta-Schema",
  "description": "Schema for defining ECS Systems - Temporal activities / business logic units that read and write entities",
  "type": "object",
  "required": ["id", "x-familiar-kind"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this system"
    },
    "title": {
      "type": "string",
      "description": "Human-readable name for the system (e.g., FatesGate)"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the system's purpose"
    },
    "x-familiar-kind": {
      "type": "string",
      "const": "system",
      "description": "Must be 'system' for system schemas"
    },

    "dispatch": {
      "type": "array",
      "description": "Event-driven dispatch rules with CEL routing logic",
      "items": {
        "type": "object",
        "properties": {
          "trigger": {
            "type": "string",
            "description": "Event trigger (e.g., 'kafka:commands.weave')"
          },
          "technique": {
            "$ref": "../references/SchemaRef.meta.schema.json",
            "description": "Technique to execute"
          },
          "routing_policy": {
            "type": "string",
            "description": "CEL expression for intelligent routing (e.g., 'input.size > 10k ? \"gpu-pool\" : \"cpu-pool\"')"
          },
          "constraints": {
            "type": "object",
            "description": "Runtime constraints for this dispatch",
            "properties": {
              "timeout": {
                "type": "string",
                "description": "Activity timeout"
              },
              "retries": {
                "type": "integer",
                "minimum": 0,
                "default": 3
              },
              "priority": {
                "type": "string",
                "description": "CEL: input.user_tier == 'premium' ? 'high' : 'normal'"
              }
            }
          }
        },
        "required": ["trigger", "technique"]
      }
    },

    "inputs": {
      "type": "object",
      "description": "Expected input schemas for this system",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "schema": { "$ref": "../references/SchemaRef.meta.schema.json" },
          "queue": { "$ref": "../references/SchemaRef.meta.schema.json" }
        }
      }
    },

    "output": {
      "type": "object",
      "description": "Expected output schema",
      "properties": {
        "schema": { "$ref": "../references/SchemaRef.meta.schema.json" },
        "queue": { "$ref": "../references/SchemaRef.meta.schema.json" }
      }
    },

    "node": {
      "$ref": "../references/SchemaRef.meta.schema.json",
      "description": "Node that executes this system"
    },

    "queue": {
      "$ref": "../references/SchemaRef.meta.schema.json",
      "description": "Default queue for this system"
    }
  },
  "additionalProperties": true,
  "x-familiar-generated": false
}

