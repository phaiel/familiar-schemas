{
  "$id": "https://familiar.dev/schemas/architecture/Technique.meta.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A constrained workflow using exactly 5 step types: call, switch, map, parallel, transform.",
  "properties": {
    "description": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "input": {
      "description": "The input contract for this entire flow.",
      "properties": {
        "$ref": {
          "type": "string"
        }
      },
      "required": [
        "$ref"
      ],
      "type": "object"
    },
    "output": {
      "description": "The return type of this flow.",
      "properties": {
        "$ref": {
          "type": "string"
        }
      },
      "required": [
        "$ref"
      ],
      "type": "object"
    },
    "return": {
      "additionalProperties": true,
      "description": "Final output construction using CEL expressions",
      "type": "object"
    },
    "steps": {
      "description": "Constrained instruction set: call, switch, map, parallel, transform",
      "items": {
        "$ref": "../steps/Step.meta.schema.json"
      },
      "type": "array"
    },
    "title": {
      "type": "string"
    },
    "x-familiar-kind": {
      "const": "technique"
    }
  },
  "required": [
    "id",
    "x-familiar-kind",
    "input",
    "output",
    "steps"
  ],
  "title": "Technique Definition (ISA)",
  "type": "object"
}