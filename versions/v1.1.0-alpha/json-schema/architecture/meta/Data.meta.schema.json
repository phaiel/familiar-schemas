  "$id": "https://familiar.dev/schemas/architecture/Data.meta.schema.json",
  "title": "Data Schema Definition", 
  "description": "Schemas that define data types, classifications, and primitive structures used across the platform.",
  "type": "object",
  "required": ["title", "x-familiar-kind"],
  "properties": {
    "title": { "type": "string" },
    "description": { "type": "string" },
    "x-familiar-kind": {
