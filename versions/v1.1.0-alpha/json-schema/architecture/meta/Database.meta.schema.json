{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://familiar.dev/schemas/architecture/Database.meta.schema.json",
  "title": "Database Schema Definition",
  "description": "Schemas that define database entities and their persistence mappings.",
  "type": "object",
  "required": ["title", "x-familiar-kind"],
  "properties": {
    "title": { "type": "string" },
    "description": { "type": "string" },

    "x-familiar-kind": {
      "const": "database",
      "description": "Discriminator for database entity schemas"
    },

    "x-familiar-service": {
      "description": "Service that manages this database entity",
      "type": "object",
      "properties": {
        "$ref": { "type": "string" }
      },
      "required": ["$ref"]
    },

    "x-familiar-table": {
      "type": "string",
      "description": "Database table name for this entity"
    },

    "x-familiar-module": {
      "type": "string",
      "description": "Code module/namespace for this entity"
    },

    "x-familiar-primary-key": {
      "type": "string",
      "description": "Primary key field name"
    },

    "x-familiar-relations": {
      "type": "array",
      "description": "Foreign key relationships",
      "items": { "type": "object" }
    },

    "x-familiar-meta-schema": {
      "$ref": "#",
      "description": "Self-reference for meta-schema validation"
    }
  }
}
