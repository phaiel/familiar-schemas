{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://familiar.dev/schemas/architecture/Tool.meta.schema.json",
  "title": "Tool Definition",
  "description": "Executable business logic with queue and service bindings.",
  "type": "object",
  "required": ["title", "x-familiar-kind"],
  "properties": {
    "title": { "type": "string" },
    "description": { "type": "string" },

    "x-familiar-kind": {
      "const": "tool",
      "description": "Discriminator for tool schemas"
    },

    "x-familiar-queue": {
      "description": "Queue this tool executes on",
      "type": "object",
      "properties": {
        "$ref": { "type": "string" }
      },
      "required": ["$ref"]
    },

    "x-familiar-service": {
      "description": "Service/node this tool runs on",
      "type": "object",
      "properties": {
        "$ref": { "type": "string" }
      },
      "required": ["$ref"]
    },

    "x-familiar-meta-schema": {
      "$ref": "#",
      "description": "Self-reference for meta-schema validation"
    }
  }
}
