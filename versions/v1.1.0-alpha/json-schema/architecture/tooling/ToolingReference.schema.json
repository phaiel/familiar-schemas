{
  "$id": "https://familiar.dev/schemas/architecture/architecture/references/ToolingReference.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Reference to required tooling capabilities for an action",
  "properties": {
    "capabilities": {
      "description": "Specific capabilities needed from this tooling",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "category": {
      "$ref": "../categories/ToolingCategory.schema.json",
      "description": "Type of tooling required"
    },
    "purpose": {
      "description": "Why this tooling is needed for this action",
      "type": "string"
    }
  },
  "required": [
    "category"
  ],
  "title": "Tooling Reference",
  "type": "object",
  "x-familiar-kind": "reference"
}