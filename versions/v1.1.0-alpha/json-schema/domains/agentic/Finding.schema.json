{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A finding from an analysis agent",
  "properties": {
    "confidence": {
      "default": null,
      "description": "Confidence score (0.0 to 1.0)",
      "format": "double",
      "type": [
        "number",
        "null"
      ]
    },
    "description": {
      "description": "Detailed description",
      "type": "string"
    },
    "related_entities": {
      "default": [],
      "description": "Related entity IDs",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "title": {
      "description": "Title or label of the finding",
      "type": "string"
    }
  },
  "required": [
    "description",
    "title"
  ],
  "title": "Finding",
  "type": "object",
  "x-familiar-kind": "agentic",
  "x-familiar-meta-schema": {
    "$ref": "../../architecture/meta/Agentic.meta.schema.json"
  },
  "x-familiar-service": {
    "$ref": "../../infrastructure/nodes/familiar-daemon.node.json"
  }
}