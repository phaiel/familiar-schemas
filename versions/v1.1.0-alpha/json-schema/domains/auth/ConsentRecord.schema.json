{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ConsentType": {
      "description": "Type of consent",
      "enum": [
        "terms_of_service",
        "privacy_policy",
        "marketing_emails",
        "ai_processing",
        "data_sharing",
        "analytics"
      ],
      "type": "string"
    }
  },
  "description": "A consent record",
  "properties": {
    "consent_type": {
      "$ref": "../entities/ConsentType.schema.json"
    },
    "created_at": {
      "format": "date-time",
      "type": "string"
    },
    "granted": {
      "type": "boolean"
    },
    "id": {
      "$ref": "../primitives/ConsentRecordId.schema.json"
    },
    "ip_address": {
      "default": null,
      "type": [
        "string",
        "null"
      ]
    },
    "user_agent": {
      "default": null,
      "type": [
        "string",
        "null"
      ]
    },
    "user_id": {
      "$ref": "../primitives/UserId.schema.json"
    },
    "version": {
      "default": null,
      "type": [
        "string",
        "null"
      ]
    }
  },
  "required": [
    "consent_type",
    "created_at",
    "granted",
    "id",
    "user_id"
  ],
  "title": "ConsentRecord",
  "type": "object",
  "x-familiar-kind": "auth",
  "x-familiar-meta-schema": {
    "$ref": "../architecture/meta/Auth.meta.schema.json"
  },
  "x-familiar-requires-auth": true,
  "x-familiar-service": {
    "$ref": "../nodes/familiar-daemon.node.json"
  }
}
