{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Request for email+password signup",
  "properties": {
    "accept_privacy": {
      "type": "boolean"
    },
    "accept_terms": {
      "description": "Consent to required terms",
      "type": "boolean"
    },
    "consents": {
      "$ref": "../contracts/SignupConsents.schema.json"
    },
    "email": {
      "$ref": "../primitives/Email.schema.json"
    },
    "invite_code": {
      "anyOf": [
        {
          "$ref": "../primitives/InviteCode.schema.json"
        },
        {
          "type": "null"
        }
      ]
    },
    "name": {
      "type": "string"
    },
    "password": {
      "type": "string"
    },
    "request_context": {
      "anyOf": [
        {
          "$ref": "../contracts/RequestContext.schema.json"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "required": [
    "accept_privacy",
    "accept_terms",
    "email",
    "name",
    "password"
  ],
  "title": "SignupRequest",
  "type": "object",
  "x-familiar-kind": "auth",
  "x-familiar-meta-schema": {
    "$ref": "../architecture/meta/Auth.meta.schema.json"
  },
  "x-familiar-requires-auth": true,
  "x-familiar-service": {
    "$ref": "../nodes/familiar-daemon.node.json"
  }
}
