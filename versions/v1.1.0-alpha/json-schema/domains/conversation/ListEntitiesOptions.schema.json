{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "EntityStatus": {
      "description": "HILT (Human in the Loop) status for entity approval",
      "enum": [
        "pending",
        "approved",
        "rejected",
        "auto_spawned"
      ],
      "type": "string"
    },
    "FamiliarEntityType": {
      "description": "Type of familiar entity",
      "enum": [
        "MOMENT",
        "PULSE",
        "INTENT",
        "THREAD",
        "BOND",
        "MOTIF",
        "FILAMENT",
        "FOCUS"
      ],
      "type": "string"
    }
  },
  "description": "Options for listing entities",
  "properties": {
    "entity_type": {
      "anyOf": [
        {
          "$ref": "../entities/FamiliarEntityType.schema.json"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "limit": {
      "default": null,
      "format": "int64",
      "type": [
        "integer",
        "null"
      ]
    },
    "status": {
      "anyOf": [
        {
          "$ref": "../entities/EntityStatus.schema.json"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    }
  },
  "title": "ListEntitiesOptions",
  "type": "object",
  "x-familiar-kind": "conversation",
  "x-familiar-meta-schema": {
    "$ref": "../architecture/meta/Conversation.meta.schema.json"
  },
  "x-familiar-service": {
    "$ref": "../infrastructure/nodes/familiar-daemon.node.json"
  }
}
