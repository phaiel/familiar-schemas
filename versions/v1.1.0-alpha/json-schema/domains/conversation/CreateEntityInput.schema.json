{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "EntityPhysics": {
      "description": "Physics state for an entity",
      "properties": {
        "arousal": {
          "format": "double",
          "type": "number"
        },
        "epistemic": {
          "format": "double",
          "type": "number"
        },
        "significance": {
          "format": "double",
          "type": "number"
        },
        "valence": {
          "format": "double",
          "type": "number"
        }
      },
      "required": [
        "arousal",
        "epistemic",
        "significance",
        "valence"
      ],
      "type": "object"
    },
    "EntityStatus": {
      "description": "HILT (Human in the Loop) status for entity approval",
      "enum": [
        "pending",
        "approved",
        "rejected",
        "auto_spawned"
      ],
      "type": "string"
    },
    "FamiliarEntityType": {
      "description": "Type of familiar entity",
      "enum": [
        "MOMENT",
        "PULSE",
        "INTENT",
        "THREAD",
        "BOND",
        "MOTIF",
        "FILAMENT",
        "FOCUS"
      ],
      "type": "string"
    }
  },
  "description": "Input for creating a new familiar entity",
  "properties": {
    "content": {
      "type": "string"
    },
    "entity_type": {
      "$ref": "../entities/FamiliarEntityType.schema.json"
    },
    "metadata": {
      "anyOf": [
        {
          "default": null
        },
        {
          "type": "null"
        }
      ]
    },
    "physics": {
      "anyOf": [
        {
          "$ref": "EntityPhysics.schema.json"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "source_channel_id": {
      "default": null,
      "format": "uuid",
      "type": [
        "string",
        "null"
      ]
    },
    "source_message_id": {
      "default": null,
      "format": "uuid",
      "type": [
        "string",
        "null"
      ]
    },
    "status": {
      "anyOf": [
        {
          "$ref": "../entities/EntityStatus.schema.json"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "subject": {
      "default": null,
      "type": [
        "string",
        "null"
      ]
    },
    "tenant_id": {
      "$ref": "../primitives/TenantId.schema.json"
    }
  },
  "required": [
    "content",
    "entity_type",
    "tenant_id"
  ],
  "title": "CreateEntityInput",
  "type": "object",
  "x-familiar-kind": "conversation",
  "x-familiar-meta-schema": {
    "$ref": "../architecture/meta/Conversation.meta.schema.json"
  },
  "x-familiar-service": {
    "$ref": "../nodes/familiar-daemon.node.json"
  }
}
