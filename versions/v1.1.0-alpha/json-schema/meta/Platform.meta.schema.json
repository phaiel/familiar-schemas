{
  "$id": "https://familiar.dev/schemas/meta/Platform.meta.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Platform Definition",
  "description": "Root schema defining the complete platform architecture and deployment units.",
  "type": "object",
  "required": ["name", "nodes"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Platform name"
    },
    "version": {
      "type": "string",
      "description": "Platform version"
    },
    "nodes": {
      "type": "array",
      "description": "Deployable units (binaries/containers)",
      "items": {
        "type": "object",
        "properties": { "$ref": { "type": "string" } },
        "required": ["$ref"]
      }
    },
    "infrastructure": {
      "type": "object",
      "description": "Global shared infrastructure resources",
      "additionalProperties": {
        "type": "object",
        "properties": { "$ref": { "type": "string" } },
        "required": ["$ref"]
      }
    }
  }
}
