{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OnboardingSession",
  "description": "An onboarding session tracking progress through the flow",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "session_key": {
      "type": "string"
    },
    "email": {
      "type": [
        "string",
        "null"
      ],
      "format": "email"
    },
    "user_id": {
      "anyOf": [
        {
          "$ref": "../primitives/UserId.schema.json"
        },
        {
          "type": "null"
        }
      ]
    },
    "state": {
      "$ref": "./OnboardingState.schema.json"
    },
    "invite_code": {
      "type": [
        "string",
        "null"
      ]
    },
    "invite_id": {
      "type": [
        "string",
        "null"
      ],
      "format": "uuid"
    },
    "join_request_id": {
      "type": [
        "string",
        "null"
      ],
      "format": "uuid"
    },
    "steps_completed": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "created_at": {
      "$ref": "../primitives/Timestamp.schema.json"
    },
    "updated_at": {
      "$ref": "../primitives/Timestamp.schema.json"
    },
    "expires_at": {
      "$ref": "../primitives/Timestamp.schema.json"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [
    "id",
    "session_key",
    "state",
    "steps_completed",
    "created_at",
    "updated_at",
    "expires_at",
    "metadata"
  ],
  "x-familiar-kind": "entity",
  "x-familiar-meta-schema": {
    "$ref": "../ecs/Entity.meta.schema.json"
  }
}
