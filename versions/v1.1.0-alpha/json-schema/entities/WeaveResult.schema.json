{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "entities/WeaveResult.schema.json",
  "title": "Weave Result",
  "description": "Result of a weave operation containing processed content and metadata",
  "type": "object",
  "required": ["id", "content", "processing_time"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this weave result"
    },
    "content": {
      "type": "string",
      "description": "The processed woven content"
    },
    "processing_time": {
      "type": "number",
      "description": "Time taken to process in seconds"
    },
    "segments": {
      "type": "array",
      "items": { "$ref": "../primitives/Segment.schema.json" },
      "description": "Individual segments that were woven together"
    },
    "metadata": {
      "type": "object",
      "description": "Additional processing metadata",
      "additionalProperties": true
    }
  },
  "x-familiar-kind": "entity"
}
