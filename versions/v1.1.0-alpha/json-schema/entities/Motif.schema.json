{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Motif",
  "description": "A recurring pattern of subjective experiences (External Wave). Formed by the constructive interference of many Moments.",
  "x-familiar-kind": "entity",
  "allOf": [
    { "$ref": "../architecture/meta/PhysicalEntity.meta.schema.json" }
  ],
  "properties": {
    "metadata": {
      "additionalProperties": {
        "type": "string"
      },
      "type": "object"
    },
    "source_moments": {
      "description": "The source moments that collapsed into this pattern.",
      "items": {
        "$ref": "../primitives/UUID.schema.json"
      },
      "type": "array"
    },
    "text": {
      "type": "string"
    }
  },
  "required": [
    "metadata",
    "source_moments",
    "text"
  ],
  "type": "object",
  "x-familiar-persistence": {
    "profile": "timescaledb",
    "hypertable": true,
    "table": "motifs",
    "primary_key": ["id", "t_coord"],
    "partition_column": "t_coord",
    "indexes": [
      "tenant_id",
      "t_coord"
    ]
  },
  "x-familiar-service": {
    "$ref": "../infrastructure/nodes/familiar-daemon.node.json"
  },
  "x-familiar-composition": {
    "physics": [
      "amplitude",
      "energy",
      "position",
      "temperature",
      "velocity"
    ],
    "note": "identity fields kept direct (typed IDs)"
  }
}
