{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Summary of a course for list views",
  "properties": {
    "id": {
      "format": "uuid",
      "type": "string"
    },
    "message_count": {
      "format": "uint64",
      "minimum": 0,
      "type": "integer"
    },
    "preview": {
      "description": "Preview text (truncated first message)",
      "type": "string"
    },
    "status": {
      "$ref": "../types/CourseStatus.schema.json"
    },
    "title": {
      "type": [
        "string",
        "null"
      ]
    },
    "updated_at": {
      "$ref": "../primitives/Timestamp.schema.json"
    }
  },
  "required": [
    "id",
    "preview",
    "message_count",
    "status",
    "updated_at"
  ],
  "title": "CourseSummary",
  "type": "object",
  "x-familiar-kind": "entity",
  "x-familiar-meta-schema": {
    "$ref": "../architecture/meta/Entity.meta.schema.json"
  }
}