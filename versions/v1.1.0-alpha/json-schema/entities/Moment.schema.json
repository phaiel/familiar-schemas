{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Moment",
  "description": "A classical entity representing a specific, objective event in the past. This is the atomic unit of episodic memory (The Particle).",
  "x-familiar-kind": "entity",
  "allOf": [
    { "$ref": "../architecture/meta/PhysicalEntity.meta.schema.json" }
  ],
  "properties": {
    "metadata": {
      "additionalProperties": {
        "type": "string"
      },
      "type": "object"
    },
    "moment_type": {
      "$ref": "../types/MomentType.schema.json"
    },
    "text": {
      "type": "string"
    }
  },
  "required": [
    "metadata",
    "moment_type",
    "text"
  ],
  "type": "object",
  "x-familiar-persistence": {
    "profile": "timescaledb",
    "hypertable": true,
    "table": "moments",
    "primary_key": ["id", "t_coord"],
    "partition_column": "t_coord",
    "indexes": [
      "tenant_id",
      "t_coord",
      "moment_type"
    ]
  },
  "x-familiar-service": {
    "$ref": "../infrastructure/nodes/familiar-daemon.node.json"
  },
  "x-familiar-composition": {
    "physics": [
      "amplitude",
      "energy",
      "position",
      "temperature",
      "velocity"
    ],
    "note": "identity fields kept direct (typed IDs)"
  }
}
