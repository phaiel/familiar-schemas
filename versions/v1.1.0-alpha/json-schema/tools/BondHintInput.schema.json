{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ExistingBond": {
      "description": "An existing bond for context",
      "properties": {
        "head_thread_id": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "relationship_type": {
          "$ref": "../primitives/RelationshipType.schema.json"
        },
        "strength": {
          "format": "double",
          "type": "number"
        },
        "tail_thread_id": {
          "type": "string"
        }
      },
      "required": [
        "head_thread_id",
        "id",
        "relationship_type",
        "strength",
        "tail_thread_id"
      ],
      "type": "object"
    }
  },
  "description": "Input for bond hint generation",
  "properties": {
    "known_bonds": {
      "default": [],
      "description": "Known bonds for context",
      "items": {
        "$ref": "ExistingBond.schema.json"
      },
      "type": "array"
    },
    "segment": {
      "allOf": [
        {
          "$ref": "../primitives/Segment.schema.json"
        }
      ],
      "description": "The segment containing relationship information"
    },
    "threads": {
      "description": "Detected threads in the segment",
      "items": {
        "$ref": "../primitives/ThreadReference.schema.json"
      },
      "type": "array"
    }
  },
  "required": [
    "segment",
    "threads"
  ],
  "title": "BondHintInput",
  "type": "object",
  "x-familiar-kind": "tool",
  "x-familiar-meta-schema": {
    "$ref": "../architecture/meta/Tool.meta.schema.json"
  },
  "x-familiar-queue": {
    "$ref": "../infrastructure/queues/worker-queue.queue.json"
  },
  "x-familiar-role": "input",
  "x-familiar-service": {
    "$ref": "../infrastructure/nodes/familiar-worker.node.json"
  }
}
