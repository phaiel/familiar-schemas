{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ClassifiedPurpose": {
      "description": "A classified purpose with confidence",
      "properties": {
        "confidence": {
          "description": "Confidence score (0.0 to 1.0)",
          "format": "double",
          "type": "number"
        },
        "evidence": {
          "default": [],
          "description": "Evidence/reasoning for classification",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "purpose": {
          "allOf": [
            {
              "$ref": "../primitives/ToolPurpose.schema.json"
            }
          ],
          "description": "The purpose of the message"
        }
      },
      "required": [
        "confidence",
        "purpose"
      ],
      "type": "object"
    },
    "PurposeContext": {
      "description": "Context for purpose classification",
      "properties": {
        "conversation_history": {
          "default": [],
          "description": "Previous messages in conversation",
          "items": {
            "$ref": "../primitives/ConversationTurn.schema.json"
          },
          "type": "array"
        },
        "previous_classifications": {
          "default": [],
          "description": "Previous classifications detected",
          "items": {
            "$ref": "ClassifiedPurpose.schema.json"
          },
          "type": "array"
        },
        "user_patterns": {
          "anyOf": [
            {
              "$ref": "UserPurposePatterns.schema.json"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "User's typical patterns (if known)"
        }
      },
      "type": "object"
    },
    "UserPurposePatterns": {
      "description": "User's historical purpose patterns",
      "properties": {
        "primary_purpose": {
          "allOf": [
            {
              "$ref": "../primitives/ToolPurpose.schema.json"
            }
          ],
          "description": "Most common purpose"
        },
        "purpose_distribution": {
          "additionalProperties": {
            "format": "double",
            "type": "number"
          },
          "default": {},
          "description": "Distribution of purposes (purpose -> frequency)",
          "type": "object"
        }
      },
      "required": [
        "primary_purpose"
      ],
      "type": "object"
    }
  },
  "description": "Input for purpose classification",
  "properties": {
    "context": {
      "anyOf": [
        {
          "$ref": "PurposeContext.schema.json"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Conversation context for better classification"
    },
    "segment": {
      "allOf": [
        {
          "$ref": "../primitives/Segment.schema.json"
        }
      ],
      "description": "The segment to classify"
    }
  },
  "required": [
    "segment"
  ],
  "title": "PurposeClassifierInput",
  "type": "object",
  "x-familiar-kind": "tool",
  "x-familiar-meta-schema": {
    "$ref": "../architecture/meta/Tool.meta.schema.json"
  },
  "x-familiar-queue": {
    "$ref": "../infrastructure/queues/worker-queue.queue.json"
  },
  "x-familiar-role": "input",
  "x-familiar-service": {
    "$ref": "../infrastructure/nodes/familiar-worker.node.json"
  }
}
