{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Reference to an entity for binding",
  "properties": {
    "content": {
      "description": "Content/description",
      "type": "string"
    },
    "entity_type": {
      "allOf": [
        {
          "$ref": "../primitives/EntityType.schema.json"
        }
      ],
      "description": "Entity type"
    },
    "id": {
      "default": null,
      "description": "Entity ID (if existing)",
      "type": [
        "string",
        "null"
      ]
    },
    "timestamp": {
      "default": null,
      "description": "When created (for temporal binding)",
      "type": [
        "string",
        "null"
      ]
    }
  },
  "required": [
    "content",
    "entity_type"
  ],
  "title": "EntityRef",
  "type": "object",
  "x-familiar-kind": "tool",
  "x-familiar-meta-schema": {
    "$ref": "../architecture/meta/Tool.meta.schema.json"
  },
  "x-familiar-queue": {
    "$ref": "../infrastructure/queues/worker-queue.queue.json"
  },
  "x-familiar-service": {
    "$ref": "../infrastructure/nodes/familiar-worker.node.json"
  }
}
