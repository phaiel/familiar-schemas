{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AudioFeatures": {
      "description": "Audio characteristics",
      "properties": {
        "pitch_variance": {
          "default": null,
          "description": "Pitch variation",
          "format": "double",
          "type": [
            "number",
            "null"
          ]
        },
        "speaking_rate": {
          "default": null,
          "description": "Speaking rate (words per minute)",
          "format": "double",
          "type": [
            "number",
            "null"
          ]
        },
        "voice_emotion": {
          "default": null,
          "description": "Detected emotion from voice",
          "type": [
            "string",
            "null"
          ]
        },
        "volume": {
          "description": "Average volume (0.0 to 1.0)",
          "format": "double",
          "type": "number"
        }
      },
      "required": [
        "volume"
      ],
      "type": "object"
    }
  },
  "description": "Audio-specific segment features",
  "properties": {
    "audio_features": {
