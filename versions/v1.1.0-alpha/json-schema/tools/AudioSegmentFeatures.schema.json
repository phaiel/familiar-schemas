    "speaker_id": {
      "default": null,
      "description": "Speaker ID",
      "type": [
        "string",
        "null"
      ]
    },
    "transcript": {
      "description": "Transcribed text",
      "type": "string"
    }
  },
  "required": [
    "audio_features",
    "transcript"
  ],
  "title": "AudioSegmentFeatures",
  "type": "object",
  "x-familiar-kind": "tool",
  "x-familiar-queue": "worker-queue",
  "x-familiar-service": {
