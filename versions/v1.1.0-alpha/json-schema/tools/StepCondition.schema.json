{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ConditionOperator": {
      "description": "Condition operators",
      "enum": [
        "equals",
        "not_equals",
        "greater_than",
        "less_than",
        "contains",
        "not_contains",
        "is_null",
        "is_not_null",
        "in"
      ],
      "type": "string"
    },
    "ConditionType": {
      "description": "Types of conditions",
      "oneOf": [
        {
          "description": "Check output value",
          "enum": [
            "output_value"
          ],
          "type": "string"
        },
        {
          "description": "Check if step succeeded",
          "enum": [
            "step_success"
          ],
          "type": "string"
        },
        {
          "description": "Check if step failed",
          "enum": [
            "step_failed"
          ],
          "type": "string"
        },
        {
          "description": "Check output exists",
          "enum": [
            "output_exists"
          ],
          "type": "string"
        }
      ]
    }
  },
  "description": "Condition for conditional execution",
  "properties": {
    "condition_type": {
      "allOf": [
        {
          "$ref": "ConditionType.schema.json"
        }
      ],
      "description": "Type of condition"
    },
    "operator": {
      "allOf": [
        {
          "$ref": "ConditionOperator.schema.json"
        }
      ],
      "description": "Operator"
    },
    "path": {
      "description": "Path to check",
      "type": "string"
    },
    "source_step": {
      "description": "Source step to check",
      "type": "string"
    },
    "value": {
      "description": "Value to compare"
    }
  },
  "required": [
    "condition_type",
    "operator",
    "path",
    "source_step",
    "value"
  ],
  "title": "StepCondition",
  "type": "object",
  "x-familiar-kind": "tool",
  "x-familiar-meta-schema": {
    "$ref": "../architecture/meta/Tool.meta.schema.json"
  },
  "x-familiar-queue": {
    "$ref": "../infrastructure/queues/worker-queue.queue.json"
  },
  "x-familiar-service": {
    "$ref": "../infrastructure/nodes/familiar-worker.node.json"
  }
}
