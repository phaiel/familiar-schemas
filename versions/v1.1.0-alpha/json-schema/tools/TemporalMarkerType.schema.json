  "x-familiar-service": {
    "$ref": "../nodes/familiar-worker.node.json"
  },
  "x-familiar-variants": {
    "absolute": "Absolute",
    "duration": "Duration",
    "frequency": "Frequency",
    "relative": "Relative",
    "time_of_day": "TimeOfDay"
  }
