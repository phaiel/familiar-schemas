{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "BoundingBox": {
      "description": "Bounding box for object detection",
      "properties": {
        "height": {
          "format": "double",
          "type": "number"
        },
        "width": {
          "format": "double",
          "type": "number"
        },
        "x": {
          "format": "double",
          "type": "number"
        },
        "y": {
          "format": "double",
          "type": "number"
        }
      },
      "required": [
        "height",
        "width",
        "x",
        "y"
      ],
      "type": "object"
    }
  },
  "description": "A detected person in vision",
  "properties": {
    "bounding_box": {
      "anyOf": [
        {
          "$ref": "BoundingBox.schema.json"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "emotion": {
      "default": null,
      "type": [
        "string",
        "null"
      ]
    },
    "face_id": {
      "default": null,
      "type": [
        "string",
        "null"
      ]
    }
  },
  "title": "DetectedPerson",
  "type": "object",
  "x-familiar-kind": "tool",
  "x-familiar-meta-schema": {
    "$ref": "../architecture/meta/Tool.meta.schema.json"
  },
  "x-familiar-queue": {
    "$ref": "../infrastructure/queues/worker-queue.queue.json"
  },
  "x-familiar-service": {
    "$ref": "../infrastructure/nodes/familiar-worker.node.json"
  }
}
