{
  "$schema": "../../architecture/meta/Action.meta.schema.json",
  "$id": "actions/classification/purpose-classify.action.json",
  "id": "classification.purpose-classify",
  "title": "Classify Message Purpose",
  "description": "Atomic capability for classifying the purpose/intent of user messages",
  "x-familiar-kind": "action",
  "x-familiar-compute-category": "ai",
  "x-familiar-execution-model": "async",
  "x-familiar-side-effects": ["ml-inference"],
  "x-familiar-reliability": "idempotent",
  "x-familiar-tooling": [
    {
      "category": "ml-classification",
      "capabilities": ["intent-classification", "semantic-analysis"],
      "purpose": "ML models for message intent classification"
    }
  ],
  "signature": {
    "inputs": {
      "segment": {
        "schema": { "$ref": "../../primitives/Segment.schema.json" },
        "semantics": "borrow"
      }
    },
    "output": {
      "schema": {
        "type": "object",
        "properties": {
          "purpose": { "type": "string" },
          "confidence": { "type": "number" },
          "evidence": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["purpose", "confidence"]
      },
      "nature": "atomic"
    }
  }
}
