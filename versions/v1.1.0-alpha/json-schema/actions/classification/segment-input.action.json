{
  "$schema": "../../architecture/meta/Action.meta.schema.json",
  "$id": "actions/classification/segment-input.action.json",
  "id": "classification.segment-input",
  "title": "Segment Raw Input",
  "description": "Break down raw input into logical segments for further processing",
  "x-familiar-kind": "action",
  "x-familiar-compute-category": "pure",
  "x-familiar-execution-model": "sync",
  "x-familiar-side-effects": [],
  "x-familiar-reliability": "idempotent",
  "x-familiar-tooling": [
    {
      "category": "text-processing",
      "capabilities": ["segmentation", "tokenization"],
      "purpose": "Text processing utilities for input segmentation"
    }
  ],
  "signature": {
    "inputs": {
      "raw_input": {
        "schema": { "type": "string" },
        "semantics": "borrow"
      },
      "config": {
        "schema": {
          "type": "object",
          "properties": {
            "max_segment_length": { "type": "integer" },
            "preserve_sentences": { "type": "boolean" }
          }
        },
        "semantics": "borrow",
        "nature": "optional"
      }
    },
    "output": {
      "schema": {
        "type": "array",
        "items": { "$ref": "../../primitives/Segment.schema.json" }
      },
      "nature": "atomic"
    }
  }
}
