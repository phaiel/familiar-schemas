{
  "$schema": "../../../ecs/Action.meta.schema.json",
  "$id": "actions/entity/search.action.json",
  "id": "entity.search",
  "title": "Search Entities",
  "x-familiar-kind": "action",
  "x-familiar-compute-category": "state",
  "x-familiar-execution-model": "async",
  "x-familiar-side-effects": ["database"],
  "x-familiar-reliability": "idempotent",
  "x-familiar-dependencies": [
    {
      "name": "sqlx",
      "version": "^0.7",
      "features": ["postgres", "runtime-tokio"],
      "purpose": "PostgreSQL database client for entity search"
    },
    {
      "name": "serde",
      "version": "^1.0",
      "features": ["derive"],
      "purpose": "Serialization for search results"
    }
  ],

  "signature": {
    "inputs": {
      "query": {
        "schema": { "$ref": "../../../primitives/String.schema.json" },
        "semantics": "borrow"
      },
      "user_id": {
        "schema": { "$ref": "../../../primitives/UUID.schema.json" },
        "semantics": "borrow"
      }
    },
    "output": {
      "schema": {
        "type": "array",
        "items": { "$ref": "../../../entities/Entity.schema.json" }
      },
      "nature": "atomic"
    }
  }
}
