{
  "$schema": "../../../ecs/Action.meta.schema.json",
  "$id": "actions/entity/spawn_course.action.json",
  "id": "entity.spawn_course",
  "title": "Spawn Course Entity",
  "x-familiar-kind": "action",
  "x-familiar-compute-category": "state",
  "x-familiar-execution-model": "async",
  "x-familiar-side-effects": ["database"],
  "x-familiar-reliability": "transactional",
  "x-familiar-dependencies": [
    {
      "name": "sqlx",
      "version": "^0.7",
      "features": ["postgres", "runtime-tokio"],
      "purpose": "PostgreSQL database client"
    },
    {
      "name": "serde",
      "version": "^1.0",
      "features": ["derive"],
      "purpose": "Serialization for entity data"
    }
  ],

  "signature": {
    "inputs": {
      "weave_id": {
        "schema": { "$ref": "../../../primitives/UUID.schema.json" },
        "semantics": "move"
      },
      "classification": {
        "schema": { "$ref": "../../../entities_api/ClassificationResponse.schema.json" },
        "semantics": "borrow"
      },
      "content": {
        "schema": { "$ref": "../../../primitives/String.schema.json" },
        "semantics": "borrow"
      }
    },
    "output": {
      "schema": { "$ref": "../../../entities/Course.schema.json" },
      "nature": "atomic"
    }
  }
}
