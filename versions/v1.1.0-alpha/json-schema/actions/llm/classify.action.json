{
  "$schema": "../../architecture/meta/Action.meta.schema.json",
  "$id": "actions/llm/classify.action.json",
  "id": "llm.classify",
  "title": "Classify Text",
  "x-familiar-kind": "action",
  "x-familiar-compute-category": "ai",
  "x-familiar-execution-model": "async",
  "x-familiar-side-effects": ["network", "llm_api"],
  "x-familiar-reliability": "idempotent",
  "x-familiar-tooling": [
    {
      "category": "llm",
      "capabilities": ["text-classification"],
      "purpose": "LLM API for text classification tasks"
    },
    {
      "category": "async-runtime",
      "capabilities": ["spawn", "join"],
      "purpose": "Async execution for API calls"
    }
  ],

  "signature": {
    "inputs": {
      "text": {
        "schema": { "$ref": "../../primitives/String.schema.json" },
        "semantics": "borrow"
      },
      "model_hint": {
        "schema": { "$ref": "../../primitives/String.schema.json" },
        "semantics": "borrow",
        "optional": true
      }
    },
    "output": {
      "schema": { "$ref": "../../entities_api/ClassificationResponse.schema.json" },
      "nature": "atomic"
    }
  }
}
