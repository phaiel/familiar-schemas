{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AsyncTaskPollResponse",
  "description": "Polling response for async task status",
  "type": "object",
  "properties": {
    "task_id": {
      "type": "string",
      "format": "uuid"
    },
    "status": {
      "$ref": "./AsyncTaskStatus.schema.json"
    },
    "output": {
      "anyOf": [
        { "type": "object", "additionalProperties": true },
        { "type": "null" }
      ]
    },
    "error_message": {
      "type": ["string", "null"]
    },
    "attempt_count": {
      "type": "integer",
      "format": "int32"
    },
    "created_at": {
      "$ref": "../primitives/Timestamp.schema.json"
    },
    "completed_at": {
      "anyOf": [
        { "$ref": "../primitives/Timestamp.schema.json" },
        { "type": "null" }
      ]
    }
  },
  "required": ["task_id", "status", "attempt_count", "created_at"],
  "x-familiar-kind": "response"
}


