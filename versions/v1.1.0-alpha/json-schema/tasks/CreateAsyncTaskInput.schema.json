{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CreateAsyncTaskInput",
  "description": "Input to create an async task",
  "type": "object",
  "properties": {
    "task_type": {
      "type": "string"
    },
    "correlation_id": {
      "type": "string"
    },
    "input": {
      "type": "object",
      "additionalProperties": true
    },
    "user_id": {
      "anyOf": [
        { "$ref": "../primitives/UserId.schema.json" },
        { "type": "null" }
      ]
    },
    "tenant_id": {
      "anyOf": [
        { "$ref": "../primitives/TenantId.schema.json" },
        { "type": "null" }
      ]
    },
    "max_attempts": {
      "type": ["integer", "null"],
      "format": "int32"
    },
    "metadata": {
      "anyOf": [
        { "type": "object", "additionalProperties": true },
        { "type": "null" }
      ]
    }
  },
  "required": ["task_type", "correlation_id", "input"],
  "x-familiar-kind": "request"
}


