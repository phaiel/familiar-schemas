{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WeaveBlock",
  "description": "Input block types for multimodal weave requests",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "text"
        },
        "content": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "content"
      ]
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "image"
        },
        "source": {
          "type": "string"
        },
        "alt_text": {
          "type": [
            "string",
            "null"
          ]
        },
        "analyze": {
          "type": "boolean",
          "default": true
        }
      },
      "required": [
        "type",
        "source"
      ]
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "audio"
        },
        "source": {
          "type": "string"
        },
        "duration_secs": {
          "type": [
            "number",
            "null"
          ]
        },
        "transcript": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "type",
        "source"
      ]
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "document"
        },
        "source": {
          "type": "string"
        },
        "filename": {
          "type": [
            "string",
            "null"
          ]
        },
        "mime_type": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "type",
        "source"
      ]
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "const": "webpage"
        },
        "url": {
          "type": "string"
        },
        "selector": {
          "type": [
            "string",
            "null"
          ]
        },
        "extract_images": {
          "type": "boolean",
          "default": false
        }
      },
      "required": [
        "type",
        "url"
      ]
    }
  ],
  "x-familiar-kind": "component",
  "x-familiar-meta-schema": {
    "$ref": "../architecture/meta/Component.meta.schema.json"
  }
}
