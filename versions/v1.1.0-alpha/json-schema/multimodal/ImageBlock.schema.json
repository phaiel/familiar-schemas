{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ImageBlock",
  "description": "Image block for multimodal weave requests",
  "type": "object",
  "properties": {
    "source": {
      "type": "string",
      "description": "base64 data URI or URL"
    },
    "alt_text": {
      "type": ["string", "null"]
    },
    "analyze": {
      "type": "boolean",
      "default": true,
      "description": "Request vision analysis"
    }
  },
  "required": ["source"],
  "x-familiar-kind": "component"
}


