{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "familiar-router",
  "description": "The central routing node that makes intelligent distribution decisions.",
  "x-familiar-kind": "node",
  "x-familiar-meta-schema": {
    "$ref": "../../architecture/meta/Node.meta.schema.json"
  },
  "constraints": {
    "memory": "node.available_memory > config:nodes.familiar_router.constraints.memory_threshold",
    "cpu": "node.cpu_usage < config:nodes.familiar_router.constraints.cpu_threshold",
    "network": "node.network_latency_ms < config:nodes.familiar_router.constraints.network_latency_threshold",
    "routing_load": "node.active_routing_decisions < config:nodes.familiar_router.constraints.max_concurrent_decisions"
  },
  "resources": {
    "cpu": "config:nodes.familiar_router.resources.cpu",
    "memory": "config:nodes.familiar_router.resources.memory",
    "storage": "config:nodes.familiar_router.resources.storage"
  },
  "systems": [
    { "$ref": "../systems/CoreRouter.system.json" }
  ]
}
