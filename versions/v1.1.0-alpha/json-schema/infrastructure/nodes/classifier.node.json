{
  "$schema": "../../architecture/meta/Node.meta.schema.json",
  "$id": "infrastructure/nodes/classifier.node.json",
  "id": "classifier",
  "title": "Classification Node",
  "description": "ML-optimized node for classification and feature extraction workloads",
  "x-familiar-kind": "node",

  "constraints": {
    "memory": "node.available_memory > config:nodes.classifier.constraints.memory_threshold",
    "ml_ready": "node.has_ml_libraries == true",
    "load": "node.active_ml_jobs < 8",
    "gpu": "node.gpu_memory_available > 2000000"
  },

  "resources": {
    "cpu": "config:nodes.classifier.resources.cpu",
    "memory": "config:nodes.classifier.resources.memory",
    "gpu": "config:nodes.classifier.resources.gpu"
  },

  "systems": [
    { "$ref": "../systems/ClassifierSystem.system.json" },
    { "$ref": "../systems/FeatureExtractionSystem.system.json" }
  ]
}
