{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://familiar.dev/schemas/ecs/Auth.meta.schema.json",
  "title": "Authentication Schema Definition",
  "description": "Schemas that define authentication and authorization concepts in the system.",
  "type": "object",
  "required": ["title", "x-familiar-kind"],
  "properties": {
    "title": { "type": "string" },
    "description": { "type": "string" },

    "x-familiar-kind": {
      "const": "auth",
      "description": "Discriminator for authentication-related schemas"
    },

    "x-familiar-requires-auth": {
      "type": "boolean",
      "description": "Whether this schema represents an authenticated resource",
      "default": false
    },

    "x-familiar-service": {
      "description": "Service that handles this auth schema",
      "type": "object",
      "properties": {
        "$ref": { "type": "string" }
      },
      "required": ["$ref"]
    },

    "x-familiar-meta-schema": {
      "$ref": "#",
      "description": "Self-reference for meta-schema validation"
    }
  }
}
