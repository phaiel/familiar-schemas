{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://familiar.dev/schemas/ecs/LibraryReference.schema.json",
  "title": "Library Reference",
  "description": "Reference to an external Rust crate or library dependency",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Cargo crate name (e.g., 'rig', 'tokio', 'serde')"
    },
    "version": {
      "type": "string",
      "description": "Version constraint (e.g., '1.0', '^1.2.3')"
    },
    "features": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Required Cargo features to enable"
    },
    "purpose": {
      "type": "string",
      "description": "Why this library is needed for this action"
    }
  },
  "x-familiar-kind": "reference"
}
